{
  "name": "sokos-mikrofrontend-template",
  "version": "1.0.0",
  "description": "Mikrofrontend for Utbetalingsportalen",
  "type": "module",
  "scripts": {
    "dev": "vite --mode mock",
    "dev:backend": "vite --mode backend",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "prepare": "husky",
    "lint": "eslint",
    "stylelint": "stylelint '**/*.css'"
  },
  "dependencies": {
    "@axe-core/playwright": "^4.10.1",
    "@grafana/faro-web-sdk": "^1.12.2",
    "@navikt/aksel-icons": "^7.9.2",
    "@navikt/ds-css": "^7.9.2",
    "@navikt/ds-react": "^7.9.2",
    "axios": "^1.7.9",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "swr": "^2.3.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@eik/rollup-plugin": "^4.0.64",
    "@eslint/js": "^9.18.0",
    "@navikt/aksel-stylelint": "^7.9.2",
    "@playwright/test": "^1.49.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@trivago/prettier-plugin-sort-imports": "^5.2.1",
    "@types/node": "^22.10.5",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "jsdom": "^26.0.0",
    "lint-staged": "^15.3.0",
    "msw": "^2.7.0",
    "postcss": "^8.4.49",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "stylelint": "^16.13.0",
    "stylelint-config-standard": "^36.0.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.19.1",
    "vite": "6.0.7",
    "vite-plugin-css-injected-by-js": "^3.5.2",
    "vite-plugin-environment": "^1.1.3",
    "vitest": "^2.1.8"
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "@navikt/aksel-stylelint/recommended"
    ],
    "ignoreFiles": "dist/**/*"
  },
  "prettier": {
    "plugins": [
      "@trivago/prettier-plugin-sort-imports"
    ],
    "overrides": [
      {
        "files": "**/*.module.css",
        "options": {
          "tailwindConfig": "tailwind.config.cjs",
          "plugins": [
            "@trivago/prettier-plugin-sort-imports",
            "prettier-plugin-tailwindcss"
          ]
        }
      },
      {
        "files": "**/*.css",
        "options": {
          "printWidth": 130
        }
      }
    ],
    "importOrder": [
      "^@navikt/(.*)$",
      "^@/(.*)$",
      "^[./]"
    ],
    "importOrderSortSpecifiers": true
  },
  "lint-staged": {
    "*.ts": "eslint",
    "*.tsx": "eslint",
    "*.css": "stylelint --fix",
    "*": "prettier --write --ignore-unknown"
  },
  "engines": {
    "node": ">=22.12.0",
    "pnpm": ">=9.15"
  }
}
