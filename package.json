{
  "name": "sokos-mikrofrontend-template",
  "version": "1.0.0",
  "description": "Mikrofrontend for Utbetalingsportalen",
  "type": "module",
  "scripts": {
    "dev": "vite --mode mock",
    "dev:backend": "vite --mode backend",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "prepare": "husky",
    "lint": "eslint",
    "stylelint": "stylelint '**/*.css'"
  },
  "dependencies": {
    "@axe-core/playwright": "^4.10.1",
    "@grafana/faro-web-sdk": "^1.18.1",
    "@navikt/aksel-icons": "^7.21.1",
    "@navikt/ds-css": "^7.21.1",
    "@navikt/ds-react": "^7.21.1",
    "axios": "^1.9.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "swr": "^2.3.3",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "@navikt/aksel-stylelint": "^7.21.1",
    "@playwright/test": "^1.52.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/node": "^22.15.17",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.4.1",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.1.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^15.5.1",
    "msw": "^2.8.2",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "stylelint": "^16.19.1",
    "stylelint-config-standard": "^37.0.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.0",
    "vite": "6.3.5",
    "vite-plugin-css-injected-by-js": "^3.5.2",
    "vite-plugin-environment": "^1.1.3",
    "vitest": "^3.1.3"
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "@navikt/aksel-stylelint/recommended"
    ],
    "ignoreFiles": "dist/**/*"
  },
  "prettier": {
    "plugins": [
      "@trivago/prettier-plugin-sort-imports"
    ],
    "overrides": [
      {
        "files": "**/*.module.css",
        "options": {
          "plugins": [
            "@trivago/prettier-plugin-sort-imports"
          ]
        }
      },
      {
        "files": "**/*.css",
        "options": {
          "printWidth": 130
        }
      }
    ],
    "importOrder": [
      "^@navikt/(.*)$",
      "^@/(.*)$",
      "^[./]"
    ],
    "importOrderSortSpecifiers": true
  },
  "lint-staged": {
    "*.ts": "eslint",
    "*.tsx": "eslint",
    "*.css": "stylelint --fix",
    "*": "prettier --write --ignore-unknown"
  },
  "engines": {
    "node": ">=22.12.0",
    "pnpm": ">=9.15"
  }
}
